check process unicorn
with pidfile /var/www/<%= ENV['APP_NAME'] %>/shared/pids/unicorn.0.pid
start program = "/etc/init.d/unicorn restart"
stop program = "/etc/init.d/unicorn stop"
if mem is greater than 200.0 MB for 3 cycles then restart
if cpu is greater than 22% for 3 cycles then alert
if cpu is greater than 25% for 2 cycles then restart
